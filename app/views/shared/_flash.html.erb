<% if flash[:notice] %>
    <div class="alert alert-primary my-2 d-flex justify-content-center" role="alert">
        <%= flash[:notice]%>
    </div>
<%end%>

<% if flash[:alert] %>
    <div class="alert alert-danger my-2 d-flex justify-content-center" role="alert">
        <%= flash[:alert]%>
    </div>
<%end%>